<div class="our-team-wrapper">
    <h1>{{ section.settings.heading }}</h1>
    <p class="subheading">{{ section.settings.subheading }}</p>
    
    <div class="the-team-wrapper">
        <div class="team-member-wrapper">
            <div class="team-member-image-and-title">
                {{ section.settings.image_with_text_image1 | image_url: width: 500 | image_tag }}
                <p class="name">{{ section.settings.image1_name }}</p>
                <span class="hustler-title">{{ section.settings.image1_role }}</span>
            </div>

            <div class="team-member-description">
                <p>{{ section.settings.description1 }}</p>
            </div>
        </div>
        <div class="team-member-wrapper">
            <div class="team-member-image-and-title">
                {{ section.settings.image_with_text_image2 | image_url: width: 500 | image_tag }}
                <p class="name">{{ section.settings.image2_name }}</p>
                <span class="hustler-title">{{ section.settings.image2_role }}</span>  
            </div>

            <div class="team-member-description">
                <p>{{ section.settings.description2 }}</p>
            </div>
        </div>
    </div>

</div>



